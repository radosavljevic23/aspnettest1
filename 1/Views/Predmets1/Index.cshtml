@model IEnumerable<_1.Models.Predmet>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semestar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profesor)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>@Html.CheckBox(item.ID)</td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semestar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profesor)
        </td>
        <td>
            @if (User.IsInRole(_1.Models.Role.ADMIN)) { 
                @Html.ActionLink("Edit", "Edit", new { id=item.Id })@Html.Raw("|")
                @Html.ActionLink("Details", "Details", new { id=item.Id })@Html.Raw("|")
                @Html.ActionLink("Delete", "Delete", new { id = item.Ime })@Html.Raw("|")
            }
          
            @if (item.Statusi.Any(x => x.Student.Id == (string)ViewBag.StudentId))
            {
                @Html.ActionLink("Prijavi", "Prijavi", new { id = item.Id })
                }
            
            
        </td>
    </tr>
}

</table>
